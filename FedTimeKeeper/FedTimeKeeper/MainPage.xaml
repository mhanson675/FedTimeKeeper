<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FedTimeKeeper"
             x:Class="FedTimeKeeper.MainPage">

    <StackLayout>
        <Label Text="Welcome to Fed Time Keeper"
           FontSize="14"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand">
        </Label>

        <Button Text="Click me to start keeping time."
                HorizontalOptions="Center"
                Margin="10"
                VerticalOptions="CenterAndExpand"
                x:Name="StartButton"
                Clicked="StartButton_Clicked"/>
    </StackLayout>

</ContentPage>
