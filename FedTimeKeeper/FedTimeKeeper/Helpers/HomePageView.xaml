<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FedTimeKeeper.Helpers.HomePageView">

    <StackLayout>
        <Label Text="Welcome to the Fed Time Keeper" HorizontalOptions="Center"></Label>
        <StackLayout Orientation="Horizontal">
            <Label Text="User Name:" VerticalOptions="Center"></Label>
            <Entry Placeholder="Enter your name" VerticalOptions="Center"></Entry>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Starting Pay Period:" VerticalOptions="Center"></Label>
            <DatePicker></DatePicker>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Starting Leave Balance" VerticalOptions="Center"></Label>
            <Entry Keyboard="Numeric" Placeholder="Enter Starting Leave Balance" VerticalOptions="Center"></Entry>
        </StackLayout>
    </StackLayout>
</ContentPage>